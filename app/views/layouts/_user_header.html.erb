<div class="ui fixed inverted menu">
  <div class="ui container">
    <div class="header item" id="brand">
      <%=link_to image_tag('check-mark.png', size: "36x36"), root_path, class: "ui centered mini image"%>
      <%= link_to 'Swiftly', root_path%>
    </div>

    <%= link_to ' Create Task ', new_task_path, class: "header item" %>
    <%= link_to ' Tasks ', tasks_path, class: "header item" %>
    <%= link_to ' All Users ', users_path, class: "header item" %>
    <%= link_to ' Friends ', friends_index_path, class: "header item" %>

  </div>
  <div class="right menu">
    <% if current_user %>

        <%=link_to current_user.display_name, current_user, class: "header item" %>

        <%= link_to "Logout", '/logout', class: "header item" %>
    <% else %>
        <%= link_to 'Login', '/login', class: "header item" %> <%= link_to 'Signup', '/signup', class: "header item" %>
    <% end %>
  </div>
</div>
<br />
