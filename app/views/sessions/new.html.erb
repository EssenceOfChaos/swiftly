   <head>
   	<style type="text/css">
    body {
      background-color: #DADADA;
    }
    body > .grid {
      height: 100%;
    }
    
    .column {
      max-width: 450px;
    }
  </style>
   </head>
   <%if !flash[:notice].blank? %>
          <div class="notice">
            <%= flash[:notice]%>
          </div>
          <%end%><br />
<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <div class="content">
        Log-in to your account
      </div>
    </h2>
    <%= form_tag '/login' do %>
      <div class="ui stacked segment">
        
        <div class="field">
        <div class="ui center aligned container">
  <div class="ui icon input">
        <p>Email:</p><br>
            <%= image_tag("id-card.png", size: "36x36", alt: "User id-card") %>
          
        <%= text_field_tag :email %>
          </div>
</div>
        </div><br>


        <div class="field">
        <div class="ui left aligned container">
          <div class="ui icon input">
          <p>Password:</p><br>
<%= image_tag("pin-code.png", size: "36x36", alt: "User pin-code") %> 
              <%= password_field_tag :password %>
           
          </div>
        </div>
  </div><br>
        <%= submit_tag "Submit", class: "ui fluid large teal submit button" %>
      </div>


   <% end %>

    <div class="ui message">
      New to us? <%= link_to 'Sign up', new_user_path, class: 'ui secondary button' %>
    </div>
  </div>
</div>