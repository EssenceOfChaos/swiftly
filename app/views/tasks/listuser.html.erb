<p id="notice"><%= notice %></p>
<br>
<h1 id="center">Tasks for <%=link_to current_user.display_name, current_user %> </h1>

<table class="ui celled table" class="ui table">
  <thead class="full width">
    <tr>

      <th class="three wide">Task</th>
      <th class="six wide">Description</th>
      <th class="one wide">Priority</th>
      <th class="two wide">Created at</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>

        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.priority %></td>
        <td><%= task.created_at.strftime("%b %d, %Y") %></td>
        <td class="info"><%= link_to 'Open', task %></td>
        <td class="warning"><%= link_to 'Edit', edit_task_path(task) %></td>
        <td class="positive"><%= link_to 'Complete', task, method: :delete, data: { confirm: 'Are you sure you have completed this task?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="ui buttons">
<%= link_to 'New Task', new_task_path, class: 'ui primary button', id: 'new_task', remote: true %>
<div class="or"></div>
<%= link_to 'All Tasks', tasks_path, class: 'ui secondary button' %>
</div>
